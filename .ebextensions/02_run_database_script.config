container_commands:
  01_install_postgresql_client:
    command: "yum install -y postgresql15 || true"
    leader_only: true
    
  02_run_database_script:
    command: |
      if [ -f "/var/app/ondeck/final-database-script.sql" ]; then
        echo "Running database initialization script..."
        export PGPASSWORD=$RDS_PASSWORD
        psql -h $RDS_HOSTNAME -U $RDS_USERNAME -d $RDS_DB_NAME -f /var/app/ondeck/final-database-script.sql || true
        echo "Database script execution completed."
      else
        echo "Database script not found, skipping..."
      fi
    leader_only: true

