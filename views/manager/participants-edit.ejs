                <option value="IL" <%= (participant.state === 'IL') ? 'selected' : '' %>>Illinois</option>
                <option value="IN" <%= (participant.state === 'IN') ? 'selected' : '' %>>Indiana</option>
                <option value="IA" <%= (participant.state === 'IA') ? 'selected' : '' %>>Iowa</option>
                <option value="KS" <%= (participant.state === 'KS') ? 'selected' : '' %>>Kansas</option>
                <option value="KY" <%= (participant.state === 'KY') ? 'selected' : '' %>>Kentucky</option>
                <option value="LA" <%= (participant.state === 'LA') ? 'selected' : '' %>>Louisiana</option>
                <option value="ME" <%= (participant.state === 'ME') ? 'selected' : '' %>>Maine</option>
                <option value="MD" <%= (participant.state === 'MD') ? 'selected' : '' %>>Maryland</option>
                <option value="MA" <%= (participant.state === 'MA') ? 'selected' : '' %>>Massachusetts</option>
                <option value="MI" <%= (participant.state === 'MI') ? 'selected' : '' %>>Michigan</option>
                <option value="MN" <%= (participant.state === 'MN') ? 'selected' : '' %>>Minnesota</option>
                <option value="MS" <%= (participant.state === 'MS') ? 'selected' : '' %>>Mississippi</option>
