<%- include('../partials/header', { title: "Edit Donation", user: user || null }) %>

<div class="page-header">
    <h1>Edit Donation</h1>
    <p>Update donation information</p>
</div>

<div class="form-container">
    <form method="POST" action="/donations/edit/<%= donation.donationid %>">
        <div class="form-group">
            <label for="donorname">Donor Name</label>
            <input type="text" id="donorname" value="<%= (donation.firstname || '') + ' ' + (donation.lastname || '') %>" disabled style="background-color: #f5f5f5; cursor: not-allowed;">
        </div>

        <div class="form-group">
            <label for="donoremail">Donor Email</label>
            <input type="text" id="donoremail" value="<%= donation.email || '' %>" disabled style="background-color: #f5f5f5; cursor: not-allowed;">
        </div>

        <div class="form-group">
            <label for="amount">Amount *</label>
            <input type="number" id="amount" name="amount" step="0.01" min="0" value="<%= donation.amount || '' %>" required>
        </div>

        <div class="form-group">
            <label for="donationdate">Donation Date</label>
            <input type="date" id="donationdate" name="donationdate" value="<%= donation.donationdate ? new Date(donation.donationdate).toISOString().slice(0,10) : '' %>">
        </div>

        <div class="form-actions">
            <button class="btn btn-primary" type="submit">Save Changes</button>
            <a href="/donations" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

<%- include('../partials/footer') %>

