<%- include('../partials/header', { title: 'Enter Password - Ella Rises', user: typeof user !== 'undefined' ? user : null }) %>

<!-- Login page header -->
<div class="page-header">
    <h1>Enter Password</h1>
    <p>Enter your password to continue</p>
</div>

<div class="form-container">
    <!-- Show error if login failed -->
    <% if (typeof error_message !== 'undefined' && error_message) { %>
        <div class="flash-message flash-error">
            <%= error_message %>
        </div>
    <% } %>

    <p style="margin-bottom: 1rem; color: var(--text-secondary);">
        Email: <strong><%= email %></strong>
    </p>

    <!-- Password entry form -->
    <form action="/login-password/<%= personid %>" method="POST" aria-label="Password entry form">
        <div class="form-group">
            <label for="password">Password <span aria-label="required">*</span></label>
            <input type="password" id="password" name="password" required autofocus aria-required="true" autocomplete="current-password" maxlength="20">
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary" aria-label="Submit password">Login</button>
            <a href="/login" class="btn btn-secondary" aria-label="Cancel and return to login">Cancel</a>
        </div>
    </form>
</div>

<%- include('../partials/footer') %>

