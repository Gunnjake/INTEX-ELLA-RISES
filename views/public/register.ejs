<%- include('../partials/header', { title: 'Register - Ella Rises', user: typeof user !== 'undefined' ? user : null }) %>

<div class="page-header">
    <h1><%= typeof user !== 'undefined' && user ? 'REGISTER FOR ANOTHER PROGRAM' : 'REGISTER FOR A PROGRAM' %></h1>
    <p><%= typeof user !== 'undefined' && user ? `Welcome back, ${user.username}! Register for additional programs.` : 'Join us in empowering the future generation of women' %></p>
</div>

<% if (typeof user !== 'undefined' && user) { %>
    <div class="form-container" style="margin-bottom: 2rem;">
        <div class="form-card">
            <h2 style="margin-bottom: 1rem; color: var(--coral);">Your Current Registrations</h2>
            <div id="user-registrations">
                <p style="color: var(--text-secondary);">Loading your registrations...</p>
            </div>
        </div>
    </div>
<% } %>

<div class="form-container">
    <div class="form-card">
        <form action="/register" method="POST" id="registration-form">
            <div class="form-group">
                <label for="firstName">First Name *</label>
                <input type="text" id="firstName" name="firstName" value="<%= typeof user !== 'undefined' && user ? user.firstName || '' : '' %>" required>
            </div>

            <div class="form-group">
                <label for="lastName">Last Name *</label>
                <input type="text" id="lastName" name="lastName" value="<%= typeof user !== 'undefined' && user ? user.lastName || '' : '' %>" required>
            </div>

            <div class="form-group">
                <label for="email">Email Address *</label>
                <input type="email" id="email" name="email" value="<%= typeof user !== 'undefined' && user ? user.email || '' : '' %>" <%= typeof user !== 'undefined' && user ? 'readonly' : 'required' %>>
            </div>

            <div class="form-group">
                <label for="phone">Phone Number *</label>
                <input type="tel" id="phone" name="phone" value="<%= typeof user !== 'undefined' && user ? user.phone || '' : '' %>" required>
            </div>

            <div class="form-group">
                <label for="age">Age *</label>
                <input type="number" id="age" name="age" min="11" max="18" value="<%= typeof user !== 'undefined' && user ? user.age || '' : '' %>" required>
            </div>

            <div class="form-group">
                <label for="program">Program Interest *</label>
                <select id="program" name="program" required>
                    <option value="">Select a program</option>
                    <option value="Ballet Folklorico">Ballet Folklorico</option>
                    <option value="Mariachi">Mariachi</option>
                    <option value="STEAM">STEAM</option>
                    <option value="Summit + Educational Pathways">Summit + Educational Pathways</option>
                </select>
            </div>

            <div class="form-group">
                <label for="city">City</label>
                <input type="text" id="city" name="city" value="<%= typeof user !== 'undefined' && user ? user.city || '' : '' %>">
            </div>

            <div class="form-group">
                <label for="state">State</label>
                <input type="text" id="state" name="state" maxlength="2" placeholder="UT" value="<%= typeof user !== 'undefined' && user ? user.state || '' : '' %>">
            </div>

            <div class="form-group">
                <label for="zip">Zip Code</label>
                <input type="text" id="zip" name="zip" pattern="[0-9]{5}" value="<%= typeof user !== 'undefined' && user ? user.zip || '' : '' %>">
            </div>

            <div class="form-group">
                <label for="school">School or Employer</label>
                <input type="text" id="school" name="school" value="<%= typeof user !== 'undefined' && user ? user.school || '' : '' %>">
            </div>

            <% if (typeof user === 'undefined' || !user) { %>
                <div class="form-group">
                    <label for="password">Create Password *</label>
                    <input type="password" id="password" name="password" required minlength="6">
                    <small style="color: var(--text-secondary); font-size: 0.85rem;">Minimum 6 characters</small>
                </div>

                <div class="form-group">
                    <label for="confirmPassword">Confirm Password *</label>
                    <input type="password" id="confirmPassword" name="confirmPassword" required minlength="6">
                </div>
            <% } %>

            <div class="form-group">
                <button type="submit" class="btn btn-primary"><%= typeof user !== 'undefined' && user ? 'Register for Program' : 'Create Account & Register' %></button>
            </div>

            <% if (typeof user === 'undefined' || !user) { %>
                <div style="text-align: center; margin-top: 1rem;">
                    <p style="color: var(--text-secondary); font-size: 0.9rem;">Already have an account? <a href="/login" style="color: var(--coral);">Login here</a></p>
                </div>
            <% } %>
        </form>
    </div>
</div>

<script>
// Client-side password validation
document.getElementById('registration-form')?.addEventListener('submit', function(e) {
    const password = document.getElementById('password');
    const confirmPassword = document.getElementById('confirmPassword');
    
    if (password && confirmPassword) {
        if (password.value !== confirmPassword.value) {
            e.preventDefault();
            alert('Passwords do not match. Please try again.');
            confirmPassword.focus();
            return false;
        }
        
        if (password.value.length < 6) {
            e.preventDefault();
            alert('Password must be at least 6 characters long.');
            password.focus();
            return false;
        }
    }
});
</script>

<style>
.form-container {
    max-width: 800px;
    margin: 2rem auto;
    padding: 0 2rem;
}

.form-card {
    background-color: var(--white);
    padding: 2.5rem;
    border-radius: 8px;
    box-shadow: var(--card-shadow);
}

.form-group {
    margin-bottom: 1.5rem;
}

.form-group label {
    display: block;
    font-family: var(--font-body), Arial, Helvetica, sans-serif;
    font-weight: 600;
    color: var(--text-dark);
    margin-bottom: 0.5rem;
    font-size: 0.95rem;
}

.form-group input,
.form-group select {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid var(--border-light);
    border-radius: 4px;
    font-family: var(--font-body), Arial, Helvetica, sans-serif;
    font-size: 1rem;
    transition: border-color 0.3s ease;
}

.form-group input:focus,
.form-group select:focus {
    outline: none;
    border-color: var(--coral);
}

.form-group button {
    width: 100%;
    padding: 1rem;
    font-size: 1.1rem;
}

@media (max-width: 768px) {
    .form-container {
        padding: 0 1rem;
    }
    
    .form-card {
        padding: 1.5rem;
    }
}
</style>

<% if (typeof user !== 'undefined' && user) { %>
<script>
// Load user registrations when logged in
document.addEventListener('DOMContentLoaded', function() {
    fetch('/api/my-registrations')
        .then(response => response.json())
        .then(data => {
            const container = document.getElementById('user-registrations');
            if (data.registrations && data.registrations.length > 0) {
                let html = '<ul style="list-style: none; padding: 0;">';
                data.registrations.forEach(reg => {
                    html += `<li style="padding: 0.75rem; margin-bottom: 0.5rem; background: var(--pink-bg); border-radius: 4px;">
                        <strong>${reg.program}</strong> - Registered on ${new Date(reg.registrationDate).toLocaleDateString()}
                    </li>`;
                });
                html += '</ul>';
                container.innerHTML = html;
            } else {
                container.innerHTML = '<p style="color: var(--text-secondary);">You are not currently registered for any programs.</p>';
            }
        })
        .catch(error => {
            console.error('Error loading registrations:', error);
            document.getElementById('user-registrations').innerHTML = '<p style="color: var(--error-red);">Error loading registrations.</p>';
        });
});
</script>
<% } %>

<%- include('../partials/footer') %>

