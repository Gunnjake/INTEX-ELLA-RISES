<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta tags for SEO and social sharing -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="<%= typeof description !== 'undefined' ? description : 'Ella Rises empowers the future generation of women through STEAM programs and cultural heritage including Ballet Folklorico, Mariachi, and educational workshops.' %>">
    <meta name="keywords" content="Ella Rises, STEAM education, Ballet Folklorico, Mariachi, women empowerment, cultural heritage, youth programs">
    <meta name="author" content="Ella Rises">
    <meta property="og:title" content="<%= typeof title !== 'undefined' ? title : 'Ella Rises' %>">
    <meta property="og:description" content="<%= typeof description !== 'undefined' ? description : 'Empowering the future generation of women through STEAM programs and cultural heritage.' %>">
    <meta property="og:type" content="website">
    <title><%= typeof title !== 'undefined' ? title : 'Ella Rises' %></title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/jpeg" href="/images/ella-rises-heart.jpg">
    <link rel="shortcut icon" type="image/jpeg" href="/images/ella-rises-heart.jpg">
    <link rel="apple-touch-icon" href="/images/ella-rises-heart.jpg">
    
    <!-- Preload critical above-the-fold images for homepage -->
    <% if (typeof title !== 'undefined' && title.includes('Empowering the Future Generation')) { %>
        <link rel="preload" as="image" href="/images/ella-rises-logo-white.png">
        <link rel="preload" as="image" href="/images/ella-rises-logo-header.png">
        <link rel="preload" as="image" href="/images/ballet-folklorico.avif">
        <link rel="preload" as="image" href="/images/mariachi.avif">
        <link rel="preload" as="image" href="/images/steam-workshop.jpg">
        <link rel="preload" as="image" href="/images/banner-girls.avif">
    <% } %>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Main stylesheet -->
    <link rel="stylesheet" href="/css/style.css">
    
    <!-- Chart.js for dashboard charts -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <!-- Skip link for accessibility -->
    <a href="#main-content" class="skip-to-content">Skip to main content</a>
    
    <!-- Main navigation header -->
    <header class="main-header" role="banner">
        <nav class="navbar" role="navigation" aria-label="Main navigation">
            <div class="nav-container">
                <!-- Logo -->
                <div class="nav-logo">
                    <a href="/" aria-label="Ella Rises Home">
                        <img src="/images/ella-rises-logo-white.png" alt="Ella Rises Logo" class="logo-img" onerror="this.onerror=null; this.src='/images/ella-rises-logo-pink.png';">
                        <span class="sr-only">Ella Rises Home</span>
                    </a>
                </div>
                
                <!-- Hamburger menu button for mobile -->
                <button class="mobile-menu-toggle" aria-label="Toggle navigation menu" aria-expanded="false" type="button">
                    <span class="hamburger-line"></span>
                    <span class="hamburger-line"></span>
                    <span class="hamburger-line"></span>
                </button>
                
                <!-- Navigation menu -->
                <ul class="nav-menu">
                    <!-- Public links visible to everyone -->
                    <li><a href="/" class="nav-link">Home</a></li>
                    <li><a href="/about" class="nav-link">About Us</a></li>
                    <li><a href="/programs" class="nav-link">Programs</a></li>
                    <li><a href="/#events" class="nav-link">Events</a></li>
                    <% if (typeof user !== 'undefined' && user) { %>
                        <li><a href="/events/register" class="nav-link">Register for Event</a></li>
                    <% } else { %>
                        <li><a href="/create-account" class="nav-link">Create Account</a></li>
                    <% } %>
                    <li><a href="https://givebutter.com/EllaRises" target="_blank" rel="noopener noreferrer" class="nav-link donate-btn" aria-label="Donate to Ella Rises (opens in new window)">Donate</a></li>
                    <% if (typeof user !== 'undefined' && user) { %>
                        <li><a href="/logout" class="nav-link">Logout</a></li>
                    <% } else { %>
                        <li><a href="/login" class="nav-link">Login</a></li>
                    <% } %>
                </ul>
            </div>
        </nav>
    </header>

    <!-- Admin nav bar - shows when logged in -->
    <% if (typeof user !== 'undefined' && user) { %>
        <header class="admin-header" role="banner">
            <nav class="admin-navbar" role="navigation" aria-label="Admin navigation">
                <div class="admin-nav-container">
                    <!-- Dynamic role label on far left -->
                    <% 
                        let roleLabel = 'User';
                        if (user.roles && user.roles.length > 0) {
                            // Get the first role and capitalize it
                            const firstRole = user.roles[0];
                            roleLabel = firstRole.charAt(0).toUpperCase() + firstRole.slice(1);
                        } else if (user.role === 'manager') {
                            roleLabel = 'Admin';
                        }
                    %>
                    <span class="admin-label" style="font-weight: bold; color: var(--white); font-size: 1.1rem;"><%= roleLabel %></span>
                    
                    <!-- Navigation menu items -->
                    <ul class="admin-nav-menu">
                        <!-- Dashboard link - only for managers -->
                        <% if (user.role === 'manager') { %>
                            <li><a href="/dashboard" class="admin-nav-link">Dashboard</a></li>
                        <% } %>
                        <!-- Events link - only for admins -->
                        <% if (user.role === 'manager') { %>
                            <li><a href="/events" class="admin-nav-link">Events</a></li>
                        <% } %>
                        <!-- Register for Event - only for participants (not admins) -->
                        <% if (user.role !== 'manager') { %>
                            <li><a href="/events/register" class="admin-nav-link">Register for Event</a></li>
                            <li><a href="/events/past" class="admin-nav-link">Past Events</a></li>
                        <% } %>
                        <!-- Manager-only links -->
                        <% if (user.role === 'manager') { %>
                            <li><a href="/participants" class="admin-nav-link">Participants</a></li>
                            <li><a href="/surveys" class="admin-nav-link">Surveys</a></li>
                            <li><a href="/milestones" class="admin-nav-link">Milestones</a></li>
                            <li><a href="/donations" class="admin-nav-link">Donations</a></li>
                            <li><a href="/users" class="admin-nav-link">User Maintenance</a></li>
                        <% } else { %>
                            <!-- Regular user links -->
                            <li><a href="/my-surveys" class="admin-nav-link">My Surveys</a></li>
                            <li><a href="/milestones" class="admin-nav-link">My Milestones</a></li>
                        <% } %>
                    </ul>
                    
                    <!-- Hamburger menu button for admin nav - shown on mobile only -->
                    <button class="admin-mobile-menu-toggle" aria-label="Toggle admin navigation menu" aria-expanded="false" type="button">
                        <span class="hamburger-line"></span>
                        <span class="hamburger-line"></span>
                        <span class="hamburger-line"></span>
                    </button>
                </div>
            </nav>
        </header>
    <% } %>

    <!-- Flash messages for success/error notifications -->
    <% if (typeof messages !== 'undefined' && messages && messages.length > 0) { %>
        <div class="flash-messages" role="region" aria-live="polite" aria-atomic="true">
            <% messages.forEach(function(message) { %>
                <div class="flash-message flash-<%= message.type %>" role="alert">
                    <%= message.text %>
                </div>
            <% }); %>
        </div>
        <script>
            // Clear messages after displaying them to prevent showing again
            (function() {
                fetch('/api/clear-messages', { method: 'POST', credentials: 'same-origin' }).catch(function() {});
            })();
        </script>
    <% } %>

    <!-- Main page content -->
    <main id="main-content" class="main-content">

