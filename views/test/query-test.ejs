<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="p-4">

<h2 class="mb-4">Test Email Lookup</h2>

<form method="POST" action="/test-login-query" class="card p-4 mb-4" style="max-width: 500px;">
    <label>Email</label>
    <input class="form-control mb-3" type="text" name="email" value="<%= emailInput %>" required>
    <button class="btn btn-primary w-100" type="submit">Search</button>
</form>



<!-- ERROR MESSAGE -->
<% if (error) { %>
<div class="alert alert-danger">
    <strong>Error:</strong><br>
    <pre><%= error %></pre>
</div>
<% } %>

<!-- SQL QUERY -->
<% if (actualQuery) { %>
<div class="alert alert-info">
    <strong>SQL Query Used:</strong>
    <pre><%= actualQuery %></pre>
</div>
<% } %>

<!-- RESULTS -->
<% if (results) { %>
<div class="alert alert-success">
    <strong>Results:</strong>
    <pre><%= JSON.stringify(results, null, 2) %></pre>
</div>
<% } %>

</body>
</html>
